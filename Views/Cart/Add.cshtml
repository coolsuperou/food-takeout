@{
    ViewBag.Title = "添加到购物车";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2><i class="bi bi-cart-check"></i> 添加成功</h2>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">商品已成功添加到购物车</h4>
                    
                    <div class="d-flex justify-content-center mt-4">
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary mx-2">
                            <i class="bi bi-cart"></i> 查看购物车
                        </a>
                        <a href="@Url.Action("Index", "Restaurants")" class="btn btn-outline-primary mx-2">
                            <i class="bi bi-shop"></i> 继续购物
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // 3秒后自动跳转到购物车页面
    setTimeout(function() {
        window.location.href = '@Url.Action("Index", "Cart")';
    }, 3000);
</script> 