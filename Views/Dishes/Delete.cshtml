@model food_takeout.Models.Dish
@using food_takeout.Models

@{
    ViewBag.Title = "删除菜品";
}

<h2>删除菜品</h2>

<div class="alert alert-danger">
    <h4>确认删除此菜品?</h4>
    <p>此操作不可逆，请确认。</p>
</div>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 200px;">
        }
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">菜品名称</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">价格</dt>
            <dd class="col-sm-8">¥@Model.Price.ToString("F2")</dd>

            <dt class="col-sm-4">餐厅</dt>
            <dd class="col-sm-8">@Model.Restaurant.Name</dd>

            <dt class="col-sm-4">状态</dt>
            <dd class="col-sm-8">@(Model.IsAvailable ? "可购买" : "已下架")</dd>
        </dl>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="删除" class="btn btn-danger" />
                @Html.ActionLink("返回列表", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div> 